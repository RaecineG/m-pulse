<div class="container">
  <div class="event-container row justify-content-center">
    <div class="card-event col-12 col-lg-4">
      <img src="https://images.unsplash.com/photo-1533174072545-7a4b6ad7a6c3?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" />
      <div class="card-event-infos">
        <div class="card-event-details">
          <h2><%= @event.name %></h2>
          <p><%= @event.category %></p>
          <p><%= @event.start_at.strftime("%I:%M %p") %></p>
          <p><%= @event.address %></p>
        </div>
        <h1><i class="fa-solid fa-user" style="color: #3c3b3b"></i></h1>
      </div>
      <div class="card-event-button">
        <%= link_to "Get Directions", event_path(@event), class:"btn btn-directions" %>
      </div>
      <div class="card-event-description">
        <div>
          <h5>Description</h5>
          <p><%= @event.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>
