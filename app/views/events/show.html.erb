<div class="map">
  <div style="width: 100vw; height: 100vh;"
    data-controller="destination"
    data-destination-marker-value="<%= @marker.to_json %>"
    data-destination-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div data-controller="checkin">
    <%= render template: "checkins/new",
    locals: { event: @event, checkin: @checkin },
    data: { checkin_target: "form", action: "submit->checkin#noauto" }
    %>
  </div>
</div>
