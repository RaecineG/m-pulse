                    <% end %>
                  </div>
                  <div class="card-event-infos" data-toggle="collapse">
                    <div class="card-event-infos-details">
                      <h2 class="h4"><%= event.name %></h2>
                      <h3 class="h5"><%= event.category %></h3>
                      <h3 class="h5"><%= event.end_at.strftime('%Y/%m/%d') %></h3>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
    </div>
