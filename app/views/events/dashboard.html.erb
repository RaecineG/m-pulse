<div class="container container-dashboard">
  <div class="row justify-content-center">
    <div class="switch-container-dashbord">
      <nav>
        <div class="nav justify-content-center nav-pills" id="nav-pill" role="pilllist">
          <button class="nav-link active" id="switch-description-pill" data-bs-toggle="pill" data-bs-target="#switch-description" type="button" role="pill" aria-controls="switch-description" aria-selected="true">My Check-ins</button>
          <button class="nav-link" id="switch-comments-pill" data-bs-toggle="pill" data-bs-target="#switch-comments" type="button" role="pill" aria-controls="switch-comments" aria-selected="false">My Planned Events</button>
        </div>
      </nav>
      <div class="pill-content dashbord-content" id="nav-pillContent">
        <div class="pill-pane fade show active" id="switch-description" role="pillpanel" aria-labelledby="switch-description-pill">
        <% @checkins.each do |checkin| %>
       <p class= "dashboard-p" ><%= checkin.event.name %></p>
       <p class= "dashboard-p" ><%= checkin.status %></p>
        <% end %>
        </div>
        <div class="pill-pane fade" id="switch-comments" role="pillpanel" aria-labelledby="switch-comments-pill">
        <% @events.each do |event| %>
       <p class= "dashboard-p" ><%= event.name %></p>
       <p class= "dashboard-p" ><%= event.category %></p>
       <p class= "dashboard-p" ><%= event.start_at %></p>
       <p class= "dashboard-p" ><%= event.end_at %></p>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
