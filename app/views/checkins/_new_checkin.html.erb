
<div class="centered-content" data-controller="badges">
  <%= simple_form_for [event, checkin],
   data: { action: "submit->badges#showfirst" } do |f| %>
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="my-2 me-4"><%= f.label "#{event.name}" %></h5>
      <div class="d-flex flex-column align-items-center">
        <i class="fa-solid fa-people-group" style="color: #3c3b3b"></i>
        <h6><%= event.checkins.count %></h6>
      </div>
    </div>
    <p class="my-2">Arrived at the location?</p>
    <%= f.submit "Check-in to this event", class: "btn btn-directions" %>
  <% end %>
</div>
