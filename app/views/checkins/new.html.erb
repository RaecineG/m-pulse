<div>
  <%= simple_form_for checkin, url: new_event_checkin_path(event), method: :post do |f| %>
    <%= f.label "Event: #{event.name}" %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :event_id %>
    <%# <%= f.input :status %>
    <%= f.submit "Check-in to this event", class: "btn btn-directions" %>
  <% end %>
</div>
